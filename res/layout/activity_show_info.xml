<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dip"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/R1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingRight="40dip"
        android:paddingTop="10dip" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" ></ImageView>"

        <TextView
            android:id="@+id/uId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:paddingLeft="20dip"
            android:text="连个昵称都没有。。"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/uId"
            android:layout_toRightOf="@id/icon"
            android:paddingLeft="20dip"
            android:paddingTop="10dip"
            android:text="不知道哪里人。。"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/L3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/R1"
        android:orientation="vertical"
        android:paddingBottom="20dip"
        android:paddingRight="40dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dip"
            android:text="个人简介:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dip"
            android:textSize="15dip"
            android:text="        什么都没留下。。。"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/R2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/L3"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:id="@+id/fansImage"
            android:layout_width="360px"
            android:layout_height="360px"
            android:gravity="center"
            android:src="@drawable/weibo_fans"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/attentionImage"
            android:layout_width="360px"
            android:layout_height="360px"
            android:gravity="center"
            android:src="@drawable/weibo_focus"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/weiboImage"
            android:layout_width="360px"
            android:layout_height="360px"
            android:gravity="center"
            android:src="@drawable/weibo_num"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/genderImage"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_centerInParent="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fansImage"
            android:layout_alignParentLeft="@+id/fansImage"
            android:layout_marginBottom="90px"
            android:layout_marginLeft="55px"
            android:textColor="#FFFFFF"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="85px"
            android:textColor="#FFFFFF"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fansImage"
            android:layout_alignRight="@+id/fansImage"
            android:layout_marginBottom="90px"
            android:layout_marginRight="55px"
            android:textColor="#FFFFFF"
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/R2"
        android:orientation="horizontal"
        android:padding="10dip" >

        <Button
            android:id="@+id/attentionButton"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:paddingRight="20dip"
            android:text="  关注" />
    </RelativeLayout>

</RelativeLayout>